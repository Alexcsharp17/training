@model AuthServer.WebApi.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot password?";
}


<div class="row d-flex justify-content-center">
    <div class="col-sm-8 col-md-7 col-lg-6 col-xl-5">
        <section>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal">
                <h4>Forgot password</h4>
                <h6>provide email to send recovery email to</h6>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger ml-3"></span>
                </div>
                <div class="form-group d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Send password recovery email</button>
                </div>
            </form>
        </section>
    </div>
</div>