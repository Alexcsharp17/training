@model AuthServer.WebApi.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}

<div class="container mt-3">
    <div class="row justify-content-center mt-3">
        <div class="col-md-4 ">
            <form asp-controller="Account" asp-action="Registration" method="post">
                <h4>Create a new account</h4>
                <h6>to use Movik</h6>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger ml-3"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Username" class="col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Username" class="form-control" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="col-sm-3"></label>
                    <div class="col-sm-9">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group align-content-end" style="float:right;">
                    <button type="submit" class="btn btn-primary ">Register</button>
                </div>


            </form>
        </div>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
