@model AuthServer.WebApi.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row d-flex justify-content-center">
    <div class="col-sm-8 col-md-7 col-lg-6 col-xl-5">
        <section>
            <form method="post" asp-controller="Account" asp-action="Login"
                  asp-route-returnUrl="@Model.ReturnUrl">
                <h4>Sign in</h4>
                <h6>to use Movik</h6>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger ml-3"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger ml-3"></span>
                </div>
                <div class="form-group d-flex flex-row-reverse">
                    <div class="checkbox mb-3 ml-3">
                        <label>
                            Remember me     <input asp-for="RememberMe">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <p class="d-flex justify-content-end">
                        <span class="mr-3">
                            Do not have account?
                            <a asp-controller="Account" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                        </span>
                        <span><a id="forgot-password" asp-controller="Account" asp-action="ForgotPassword">Forgot password</a></span>
                    </p>
                </div>
                <div class="form-group d-flex flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </form>
        </section>
    </div>
</div>