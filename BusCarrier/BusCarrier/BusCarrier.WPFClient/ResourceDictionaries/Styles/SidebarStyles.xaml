<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BusCarrier.WPFClient.ResourceDictionaries.Styles">
    
    <Style x:Key="SidebarContainer">
        <Setter Property="StackPanel.Orientation" Value="Vertical" />
    </Style>
    <Style x:Key="SideBarTab">
        <Setter Property="StackPanel.Margin" Value="5"/>
        <Setter Property="StackPanel.Orientation" Value="Horizontal"/>
    </Style>
    <Style x:Key="SideBarTabContainer">
        <Setter Property="StackPanel.Margin" Value="7" />
    </Style>
    <Style x:Key="SideBarButton">
        <Setter Property="Button.FontWeight" Value="Bold"/>
        <Setter Property="Button.FontSize" Value="14"/>
        <Setter Property="Button.Background" Value="DeepSkyBlue" />
    </Style>
    <Style x:Key="SideBarTabText" >
        <Setter Property="TextBlock.Margin" Value="10 0" />
    </Style>
</ResourceDictionary>